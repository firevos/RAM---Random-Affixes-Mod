<configs>
    <set xpath="/windows/window[@name='windowAssemble']/panel[@name='content']//grid[@name='cosmeticparts']/preceding-sibling::panel[@name='header'][1]/@pos">
        -387, 46
    </set>

    <set xpath="/windows/window[@name='windowAssemble']/panel[@name='content']//grid[@name='cosmeticparts']/preceding-sibling::panel[@name='header'][1]/sprite/@sprite">
        ui_affixes_icon
    </set>

    <set xpath="/windows/window[@name='windowAssemble']/panel[@name='content']//grid[@name='cosmeticparts']/@rows">
        8
    </set>

    <set xpath="/windows/window[@name='windowAssemble']/panel[@name='content']//grid[@name='cosmeticparts']/@pos">
        -384,-3
    </set>

    <set xpath="/windows/window[@name='windowAssemble']/panel[@name='content']//grid[@name='parts']/preceding-sibling::panel[@name='header'][1]/@pos">
        0,-230
    </set>

    <set xpath="/windows/window[@name='windowAssemble']/panel[@name='content']//grid[@name='parts']/@pos">
        3,-279
    </set>

    <set xpath="/windows/window[@name='windowAssemble']/panel[@name='content']//grid[@name='cosmeticparts']/preceding-sibling::panel[@name='header'][1]/label/@text_key">
        xuiAffixes
    </set>

    <!-- Insert our panel BEFORE the ammo grid, but NOT inside it -->
    <insertBefore xpath="/windows/window[@name='HUDRightStatBars']/grid[@name='hud']">
        <rect name="KillsUpgradesPanel" pos="-194,55" width="188" height="46" side="right" controller="XUiC_ActiveItemKillsUpgrades,WeaponAffixesProject" visible="{kuvisible}">
        <sprite depth="3" pos="3,0" sprite="ui_game_popup" height="46" width="182" />

        <label depth="6" name="TextContent" pos="112,-24" font_size="28" color="[white]" justify="right" pivot="right" text="{kills}/{nextUpgrade}" width="120" height="35"/>
        <sprite depth="4" sprite="ui_kill_count_icon" size="35,35" pos="148,-24" pivot="center" foregroundlayer="true" />
        </rect>
    </insertBefore>


</configs>

