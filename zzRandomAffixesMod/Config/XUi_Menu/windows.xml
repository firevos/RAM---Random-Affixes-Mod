<configs>
    <conditional>
        <if cond="mod_loaded('TFP_Harmony') == false">
            <setattribute xpath="//window[@name='mainMenu']//mainmenubutton[not(contains(@name, 'btnQuit'))]" name="force_hide">true</setattribute>
            <append xpath="//window[@name='menuBackground']">
                <label name="Warning1" depth="200" pos="0,-100" height="250" width="1200" pivot="center" justify="center" color="[black]" font_size="150" text="0_TFP_Harmony missing!!"/>
                <label name="Warning2" depth="200" pos="0,-300" height="100" width="1000" pivot="center" justify="center" color="[white]" font_size="100" text="Installation is missing a critical mod. Please verify game file integrity with Steam to restore it."/>
                <texture depth="180" color="[white]" texture="@modfolder:Textures/harmonyMissing.png" name="failure" anchor_left="#cam,0,-5" anchor_bottom="#cam,0,-5" anchor_right="#cam,1,5" anchor_top="#cam,1,5"/>
            </append>
        </if>
    </conditional>
</configs>